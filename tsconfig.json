{
	"compilerOptions": {
		"types": [
			"mocha",
			"node",
		],
		"module": "commonjs",
		"target": "es2021",
		"esModuleInterop": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		"rootDirs": [
			"src"
		],
		"outDir": "./lib",
		"strict": true,
		"paths": {
			"@drift/common/clients": ["./drift-common/common-ts/lib/clients"],
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"src/**/*.test.ts"
	]
}